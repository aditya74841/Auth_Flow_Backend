# Node.js / TypeScript server .gitignore (production-grade)

# Dependency directories
node_modules/

# Build outputs
/dist/
/build/
/out/

# TypeScript build info
*.tsbuildinfo
/tsconfig.tsbuildinfo

# Logs
logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*
.pnpm-debug.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Diagnostic reports (https://nodejs.org/api/report.html)
report.[0-9]*.[0-9]*.[0-9]*.[0-9]*.json

# Coverage
coverage/
.nyc_output/

# Jest cache/artifacts
.jest/
.jest-cache/
.jest-test-results.json

# Environment variables
.env
.env.*
!.env.example
!.env.*.example

# PM2
.pm2/

# Caches
.eslintcache
.stylelintcache
.ts-node/

# OS files
.DS_Store
Thumbs.db

# Editor/IDE
.vscode/
.idea/
*.suo
*.ntvs*
*.njsproj
*.sln
*.sw?
*.swp
*.swo

# Temporary files
/tmp/
/temp/
*.tmp

# Local storage/uploads (adjust per project needs)
uploads/
storage/
cache/

# Misc
.vscode-test/
